{
	"manifest_version": 2,
	"name": "HLS",
	"version": "0.0.1",
	"description": "HLS",
	"icons": {
		"64": "icons/icon.png"
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>",
		"nativeMessaging",
		"tabs",
		"activeTab",
		"storage",
		"unlimitedStorage",
		"history",
		"contextMenus",
		"http://*/*",
		"https://*/*"
	],
	"background": {
		"scripts": ["background/background.js"]
	},

	"browser_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"browser_style": true,
		//"default_popup": "record/record.html",
		"default_title": "HLS"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content-script.js"]
		}
	]
}